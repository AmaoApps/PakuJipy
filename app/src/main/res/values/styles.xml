<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">

        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/cornercircle</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="txtHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtHeaderBottomSheet">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtviewForm">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_semibold_italic</item>
    </style>

</resources>